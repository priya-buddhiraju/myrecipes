<%= render 'shared/page_title' , title:"All Ingredients"%>
<div align="center">
<%=will_paginate%>
</div>
<% if @ingredients.count!=0%>
<div align="center">
	 <% @ingredients.each do |ing| %>
	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li class="chef-title"><%=link_to ing.name.capitalize , ingredient_path(ing) %></li>
				<li><small><%= pluralize(ing.recipes.count,"recipe") if ing.recipes %></small></li>
				<% if logged_in? and current_chef.admin? %>
				<li><%=link_to "Edit this ingredient" , edit_ingredient_path(ing) %></li>
				<li><%=link_to "Delete this ingredient" , ingredient_path(ing) , method: :delete,
			    data: {confirm: "Are you sure you want to delete the ingredient?"}%></li>
			   <%end%>
              </div>
          </div>
      </ul>
	<%end%>
</div>
<div align="center">
<%=will_paginate%>
</div>
<%else%>
<h4 align="center"> No Ingredients yet!</h4>
<%end%>